<!-- Loop over each object in the projects array -->
{{#each locations as |location| }}
<div class="row mb-4 location">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      
      <a href="/location/{{location.id}}">{{location.name}}</a>
    </h2>
    <p>Created by {{location.user.name}} on {{format_date location.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{location.description}}
    </p>
  </div>
</div>
{{/each}}
